#!/bin/bash
#
# Get X Color

usage () {
	cat <<EOF
usage: `basename $0` <id> [prefix]
  id = [Bold](BLAck|RED|GREen|YELlow|BLUe|MAGenta|CYAn|WHIte)
  or (BackGround|ForeGround|ITalic|UnderLine)
EOF
	exit
}

PREFIX=

[[ -n $1 ]] || usage
[[ -n $2 ]] && PREFIX=$2

CC='color'

case $1 in
	bla|black)   CC="${CC}0" ;;
	red)         CC="${CC}1" ;;
	gre|green)   CC="${CC}2" ;;
	yel|yellow)  CC="${CC}3" ;;
	blu|blue)    CC="${CC}4" ;;
	mag|magenta) CC="${CC}5" ;;
	cya|cyan)    CC="${CC}6" ;;
	whi|white)   CC="${CC}7" ;;
	bbla|boldblack)   CC="${CC}8" ;;
	bred|boldred)     CC="${CC}9" ;;
	bgre|boldgreen)   CC="${CC}10" ;;
	byel|boldyellow)  CC="${CC}11" ;;
	bblu|boldblue)    CC="${CC}12" ;;
	bmag|boldmagenta) CC="${CC}13" ;;
	bcya|boldcyan)    CC="${CC}14" ;;
	bwhi|boldwhite)   CC="${CC}15" ;;
	bg|background) CC='background' ;;
	fg|foreground) CC='foreground' ;;
	it|italic)     CC="${CC}IT" ;;
	ul|underline)  CC="${CC}UL" ;;
	*) usage ;;
esac

echo "$PREFIX`xrdb -query | grep "$CC:" | tail -c 7`"
