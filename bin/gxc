#!/bin/sh
#
# Get X Color

PREFIX=

if [[ -z $1 ]]; then
	echo 'missing argument'
	exit
fi

if [[ -n $2 ]]; then
	PREFIX=$2
fi

CC='color'

case $1 in
	0|bla|black        ) CC="${CC}0" ;;
	1|red              ) CC="${CC}1" ;;
	2|gre|green        ) CC="${CC}2" ;;
	3|yel|yellow       ) CC="${CC}3" ;;
	4|blu|blue         ) CC="${CC}4" ;;
	5|mag|magenta      ) CC="${CC}5" ;;
	6|cya|cyan         ) CC="${CC}6" ;;
	7|whi|white        ) CC="${CC}7" ;;
	8|bbla|boldblack   ) CC="${CC}8" ;;
	9|bred|boldred     ) CC="${CC}9" ;;
	10|bgre|boldgreen  ) CC="${CC}10" ;;
	11|byel|boldyellow ) CC="${CC}11" ;;
	12|bblu|boldblue   ) CC="${CC}12" ;;
	13|bmag|boldmagenta) CC="${CC}13" ;;
	14|bcya|boldcyan   ) CC="${CC}14" ;;
	15|bwhi|boldwhite  ) CC="${CC}15" ;;
	bg|background      ) CC='background' ;;
	fg|foreground      ) CC='foreground' ;;
	it|italic          ) CC="${CC}IT" ;;
	ul|underline       ) CC="${CC}UL" ;;
	*) echo 'invalid color'
	   exit ;;
esac

echo $PREFIX`xrdb -query | grep "$CC:" | tail -c 7`
