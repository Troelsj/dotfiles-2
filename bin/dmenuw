#!/bin/sh

P='Run >'
FN='-*-lemon-*-*-*-*-10-*-*-*-*-*-*-*'
#FN='-*-fixed-*-*-*-*-13-*-*-*-*-*-*-*'
DIM=0.5

NB=`gxc bg \#`
NF=`gxc fg \#`
SB=`gxc bbla \#`
SF=`gxc bwhi \#`

if [[ -n `pgrep panel` ]]
then
	X=30
	Y=20
	W=1306
	H=20
	L=0
else
	X=600
	Y=372
	W=166
	H=24
	L=5
fi

dmenu_run \
	-i -r -l $L \
	-p "$P" \
	-x $X -y $Y \
	-w $W -h $H \
	-fn $FN \
	-dim $DIM \
	-nb $NB \
	-nf $NF \
	-sb $SB \
	-sf $SF
