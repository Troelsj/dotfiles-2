#!/bin/sh

if [[ -n $(pgrep panel) ]]; then
  X=80
  Y=10
  W=1206
  H=20
  L=0
else
  lines=5
  width=166
  height=24
  root=$(lsw -r)
  x=$((($(wattr w $root) - $width) / 2))
  y=$((($(wattr h $root) - $height * ($lines + 1)) / 2))
fi

dmenu_run \
  -i -r -l $lines \
  -p ' Run > ' \
  -x $x -y $y -w $width -h $height \
  -fn '-*-berry-*-*-*-*-11-*-*-*-*-*-*-*' \
  -nb $(gxc background \#) \
  -nf $(gxc foreground \#) \
  -sb $(gxc boldblack \#) \
  -sf $(gxc boldwhite \#)
