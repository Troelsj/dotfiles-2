#!/bin/bash
#
# by Ivan Sokolov

WHITE=`gxc -a white`
RED=`gxc -a red`
GREEN=`gxc -a green`
BLACK=`gxc -a black`
GRAY=`gxc -a bbla`

function A {
	echo -n "%{A:$2:}$1%{A}"
}

function B {
	echo -n "%{B#$2}$1%{B-}"
}

function F {
	echo -n "%{F#$2}$1%{F-}"
}

function o {
	echo -n "%{+o}$1%{-o}"
}

function u {
	echo -n "%{+u}$1%{-u}"
}

###

DIV=$(F '|' $GRAY)

###

network() {
	ping -c 1 8.8.8.8 >/dev/null 2>&1 && echo -n $(F + $GREEN) || echo -n $(F - $RED)
}

calendar() {
	DATE=$(date -u +%d/%m/%y)
	echo -n $(F $DATE $WHITE)
}

clock() {
	TIME=$(date -u +%H:%M)
	echo -n $(F $TIME $WHITE)
}

volume() {
	VOLUME=$(pamw --get)
	if [[ $(pamw --gm) -eq 'true' ]]
	then
		VCOLOR=$WHITE
	else
		VCOLOR=$GRAY
	fi
	echo -n "$(A $(F $VOLUME $VCOLOR) volume)"
}

battery() {
	BATTERY=$(acpi -b | awk '{gsub(/%,/,""); print $4}' | sed 's/%//g')
	if [[ $BATTERY -gt 20 ]]
	then
		BCOLOR=$WHITE
	else
		BCOLOR=$RED
	fi
	echo -n $(F $BATTERY $BCOLOR)
}

layout() {
	echo -n "$(A $(F $(xkb-switch) $WHITE) layout)"
}

mpc_status() {
	if [[ -n $(mpc | grep playing) ]]
	then
		echo -n "$(F "$(mpc current -f "[%title%]")" $WHITE) $DIV "
		echo -n "$(F "$(mpc current -f "[%album%]")" $WHITE) $DIV "
		echo -n "$(F "$(mpc current -f "[%artist%|%albumartist%|%performer%]")" $WHITE) "
	else
		echo -n ''
	fi
}

# It's was good idea, but I'm lazy
mpc_controls() {
	echo -n ''
}

SPACER=$(F '--' $BLACK)

desktops() {
	for i in $(bspc query -D | tr "\n" " ")
	do
		printf '%s' "%{A:$i:}$SPACER$(F $i $WHITE)$SPACER%{A}"
	done
}

_TOP_PADDING=`bspc config top_padding`
bspc config top_padding 30

while true
do
	# Left
	printf '%s' '%{l}'
	desktops
	
	# Center
	#printf '%s' '%{c}' "$(mpc_status)" "$(mpc_controls)"
	#printf '%s' "$(mpc_status)"
	#printf '%s' "$(mpc_controls)"
	
	# Right
	printf '%s' "%{r}"
	printf ' %s' $(network) $DIV 
	printf ' %s' $(layout) $DIV
	printf ' %s' $(volume) $DIV 
	#printf ' %s' $(battery) $DIV 
	printf ' %s' $(clock)
	printf ' %s' $(calendar) $DIV
	printf ' %s \n' "$(A "$(F x $RED)" 'bspc quit') "

	sleep 0.5s
 done | lemonbar \
	-g 1346x20+10+10 \
	-B $BLACK \
	-F $WHITE \
	-f -*-uushi-*-*-*-11-*-*-*-*-*-*-* \
	| spawner

bspc config top_padding $_TOP_PADDING
