#!/bin/bash

usage() {
	echo "Usage: $(basename $0) <command>"
	echo " -g --get		Get volume"
	echo " -s --set VALUE		Set volume"
	echo " -i --inc PERCENTS	Increase volume"
	echo " -d --dec PERCENTS	Decrease volume"
	echo " --gm			Get mute"
	echo " -t --tog		Toggle mute"
	echo " -u -unm		Unmute"
	echo " -m --mut		Mute"
}
if [[ -z $1 ]]; then
	pamw -g
else
	case $1 in
		'-s'|'--set')
			[[ -n $2 ]] && pamixer --set-volume $2 || echo "missing argument"
			;;
		'-g'|'--get')
			pamixer --get-volume
			;;
		'-i'|'--inc')
			[[ -n $2 ]] && pamixer --increase $2 || echo "missing argument"
			;;
		'-d'|'--dec')
			[[ -n $2 ]] && pamixer --decrease $2 || echo "missing argument"
			;;
		'--gm')
			pamixer --get-mute
			;;
		'-t'|'--tog')
			pamixer --toggle-mute
			;;
		'-u'|'--unm')
			pamixer --unmute
			;;
		'-m'|'--mut')
			pamixer --mute
			;;
		*) usage ;;
	esac
fi
