#!/bin/sh

usage() {
	cat <<EOF
pamw options:
  -h --help             show this help
  -g --get              get volume
  -s --set VALUE        set volume
  -i --inc PERCENTS     increase volume
  -d --dec PERCENTS     decrease volume
  --gm                  get mute
  -t --tog              toggle mute
  -u -unm               unmute
  -m --mut              mute
EOF
}

if [[ -z $1 ]]; then
	pamw -g
else
	case $1 in
		'-h'|'--help')
			usage ;;
		'-s'|'--set')
			amixer -q set Master ${2}%= ;;
		'-g'|'--get')
			amixer -q get Master ;;
		'-i'|'--inc')
			amixer -q set Master ${2}%+ ;;
		'-d'|'--dec')
			amixer -q set Master ${2}%- ;;
		'--gm')
			pamixer --get-mute ;;
		'-t')
			amixer -q set Master toggle ;;
		'-u')
			pamixer --unmute ;;
		'-m')
			pamixer --mute ;;
		*)
			usage ;;
	esac
fi
