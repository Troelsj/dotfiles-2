#!/bin/sh

usage() {
	cat <<EOF
pamw options:
  -h --help             show this help
  -g --get              get volume
  -s --set VALUE        set volume
  -i --inc PERCENTS     increase volume
  -d --dec PERCENTS     decrease volume
  --gm                  get mute
  -t --tog              toggle mute
  -u -unm               unmute
  -m --mut              mute
EOF
}

if [[ -z $1 ]]; then
	pamw -g
else
	case $1 in
		'-h'|'--help')
			usage ;;
		'-s'|'--set')
			if [[ -n $2 ]]
			then
				pamixer --set-volume $2
			else
				echo 'missing argument'
			fi
			;;
		'-g'|'--get')
			pamixer --get-volume ;;
		'-i'|'--inc')
			if [[ -n $2 ]]
			then
				pamixer --increase $2
			else
				echo 'missing argument'
			fi
			;;
		'-d'|'--dec')
			if [[ -n $2 ]]
			then
				pamixer --decrease $2
			else
				echo 'missing argument'
			fi
			;;
		'--gm')
			pamixer --get-mute ;;
		'-t')
			pamixer --toggle-mute ;;
		'-u')
			pamixer --unmute ;;
		'-m')
			pamixer --mute ;;
		*)
			usage ;;
	esac
fi
