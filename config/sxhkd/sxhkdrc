#!/bin/bash
#
# SXHKD config file
# by Ivan Sokolov

#####################
#####################
##                 ##
##  BSPWM hotkeys  ##
##                 ##
#####################
#####################

# Quit
super + Escape
	pamixer --get-volume > ~/.volume && bspc quit

###########
#         #
# Windows #
#         #
###########

# Balance tree
super + b
	bspc desktop -B

# Change windows params
super + {g,f,s,z}
	bspc window -t {floating,fullscreen,sticky,locked}

# Close window
alt + w
	bspc window -c

super + {_,shift +,ctrl +}{h,j,k,l}
	bspc window -{f,s,p} {left,down,up,right}

# Mirror and flip leaves of tree
super + {comma,period}
	bspc desktop -F {horizontal,vertical}

# Rotate leaves of tree
super + shift + {comma,period}
	bspc desktop -R {90,270}

############
#          #
# Desktops #
#          #
############

super + {1-9}
	bspc desktop -f ^{1-9}

#########
#       #
# Mouse #
#       #
#########

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

################
#              #
# Applications #
#              #
################

# URxvt
super + Return
	urxvt
# XTerm
super + alt + Return
	xterm

# dmenu
super + space
	dmenu_wrapper

# Reload SXHKD
super + r
	pkill -USR1 -x sxhkd

XF86AudioLowerVolume
	pamixer --decrease 5

XF86AudioRaiseVolume
	pamixer --increase 5
